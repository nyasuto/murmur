{
  "name": "murmur",
  "version": "1.0.0",
  "description": "Electronを使ったパーソナルライフログ生成アプリ",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build:ts && electron . --dev",
    "build": "npm run build:ts && electron-builder",
    "build:ts": "tsc && tsc -p tsconfig.renderer.json",
    "build:watch": "tsc --watch & tsc -p tsconfig.renderer.json --watch",
    "type-check": "tsc --noEmit && tsc -p tsconfig.renderer.json --noEmit",
    "dist": "npm run build:ts && electron-builder --publish=never",
    "lint": "eslint . --ext .js,.ts --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js,.ts --ignore-path .gitignore --fix",
    "format": "prettier --write \"**/*.{js,ts,json,html,css,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,ts,json,html,css,md}\" --ignore-path .gitignore",
    "test": "echo \"Tests will be added in future iterations\" && exit 0",
    "test:coverage": "echo \"Test coverage will be added in future iterations\" && exit 0"
  },
  "keywords": [
    "electron",
    "voice",
    "memo",
    "obsidian",
    "openai",
    "whisper",
    "gpt"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@electron/typescript-definitions": "^9.1.2",
    "@types/electron": "^1.4.38",
    "@types/node": "^24.0.3",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.29.0",
    "prettier": "^3.1.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "form-data": "^4.0.0",
    "fs-extra": "^11.1.1"
  },
  "build": {
    "appId": "com.yourname.murmur",
    "productName": "Murmur",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
