{
  "name": "murmur",
  "version": "1.0.0",
  "description": "Electronを使ったパーソナルライフログ生成アプリ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --ignore-path .gitignore --fix",
    "format": "prettier --write \"**/*.{js,json,html,css,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,json,html,css,md}\" --ignore-path .gitignore",
    "test": "echo \"Tests will be added in future iterations\" && exit 0",
    "test:coverage": "echo \"Test coverage will be added in future iterations\" && exit 0"
  },
  "keywords": [
    "electron",
    "voice",
    "memo",
    "obsidian",
    "openai",
    "whisper",
    "gpt"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^36.5.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.57.0",
    "prettier": "^3.1.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "form-data": "^4.0.0"
  },
  "build": {
    "appId": "com.yourname.murmur",
    "productName": "Murmur",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
